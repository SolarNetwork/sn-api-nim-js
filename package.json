{
  "name": "solarnetwork-api-nim",
  "version": "0.1.0-dev.0",
  "description": "SolarNetwork Node Image Maker (NIM) API",
  "keywords": [
    "solarnetwork"
  ],
  "homepage": "https://github.com/SolarNetwork/sn-api-nim-js",
  "license": "Apache-2.0",
  "author": {
    "name": "Matt Magoffin",
    "email": "matt@solarnetwork.net"
  },
  "main": "lib/solarnetwork-api-nim.js",
  "module": "lib/solarnetwork-api-nim.es.js",
  "jsnext:main": "lib/solarnetwork-api-nim.es.js",
  "files": [
    "lib.js",
    "lib",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/SolarNetwork/sn-api-nim-js.git"
  },
  "ava": {
    "source": [
      "src/**/*.js"
    ],
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "babel": {
    "presets": [
      "@ava/stage-4"
    ],
    "plugins": [
      [
        "module-resolver",
        {
          "root": [
            "./src"
          ]
        }
      ]
    ]
  },
  "scripts": {
    "apidoc": "jsdoc --configure jsdoc.config.json --template ./node_modules/ink-docstrap/template --package package.json --recurse --destination docs/api src",
    "prebuild": "eslint lib.js src",
    "build": "rm -rf build && mkdir build && rollup --banner \"$(preamble)\" -c -f umd -n sn -m -o lib/solarnetwork-api-nim.js -- lib.js && rollup --banner \"$(preamble)\" -c -f es -m -o lib/solarnetwork-api-nim.es.js -- lib.js",
    "postbuild": "./node_modules/uglify-es/bin/uglifyjs --preamble \"$(preamble)\" lib/solarnetwork-api-nim.js --source-map content=lib/solarnetwork-api-nim.js.map,filename=lib/solarnetwork-api-nim.min.js.map -c -m -o lib/solarnetwork-api-nim.min.js && ./node_modules/uglify-es/bin/uglifyjs --preamble \"$(preamble)\" lib/solarnetwork-api-nim.es.js --source-map content=lib/solarnetwork-api-nim.es.js.map,filename=lib/solarnetwork-api-nim.es.min.js.map -c -m -o lib/solarnetwork-api-nim.es.min.js",
    "test": "ava",
    "coverage": "nyc --reporter=html ./node_modules/.bin/ava",
    "release": "generate-release --current-version \"$(bin/remove-preid)\""
  },
  "config": {
    "generateRelease": {
      "no_confirm": false,
      "remote": "origin",
      "pre_commit_commands": [
        "npm run build"
      ],
      "post_commit_commands": [
        "npm test",
        "npm run apidoc"
      ],
      "post_complete_commands": [
        "npm publish",
        "npmversion --increment prepatch --preid dev --nogit-tag"
      ],
      "files_to_commit": [
        "./lib/*"
      ]
    }
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "babel-core": "^6.24.1",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-module-resolver": "^2.7.1",
    "babel-preset-env": "^1.6.0",
    "babel-register": "^6.24.1",
    "eslint": "3",
    "generate-release": "^1.1.0",
    "global-object": "^1.0.0",
    "ink-docstrap": "^1.3.0",
    "istanbul": "^0.4.5",
    "jsdoc": "jsdoc3/jsdoc#3.5.5",
    "npmversion": "^1.4.0",
    "nyc": "^11.0.3",
    "package-preamble": "0.1",
    "prettier": "^1.14.3",
    "rollup": "0.43",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-includepaths": "^0.2.2",
    "semver": "^5.3.0",
    "uglify-es": "^3.0.25"
  },
  "dependencies": {
    "solarnetwork-api-core": "0.13"
  }
}
